{
   "compilerOptions": {
      "lib": [
         "es2022"
      ],
      "target": "es2022",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "preserveConstEnums": true,
      "strict": true
   },
   "watchOptions": {
    "watchFile": "fixedPollingInterval"
  }
}